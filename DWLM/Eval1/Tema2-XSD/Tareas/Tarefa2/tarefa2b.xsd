<?xml version="1.0" encoding="UTF-8"?>

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
    <xs:element name="modulo">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="duracion">
                    <xs:complexType>
                        <xs:attribute name="horas" type="xs:integer" />
                        <xs:attribute name="sesions" type="xs:integer" />
                        <xs:attribute name="sesionsSemanais" type="xs:integer" />
                    </xs:complexType>
                </xs:element>
                <xs:element name="nome" type="xs:string" />
                <xs:element name="ciclo" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:simpleContent>
                            <xs:extension base="xs:string">
                                <xs:attribute name="codigo" type="xs:string" use="required" />
                            </xs:extension>
                        </xs:simpleContent>
                    </xs:complexType>
                </xs:element>
                <xs:element name="contidos">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="UD" maxOccurs="unbounded">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="titulo" type="xs:string" />
                                        <xs:element name="descrición" type="xs:string" minOccurs="0" />
                                    </xs:sequence>
                                    <xs:attribute name="num" type="xs:integer" use="required" />
                                    <xs:attribute name="sesións" type="xs:integer" use="required" />
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
            <xs:attribute name="codigo" type="xs:string" use="required" />
        </xs:complexType>
    </xs:element>
</xs:schema>